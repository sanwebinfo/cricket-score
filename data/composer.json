{
    "name": "sanwebinfo/cricket-score",
    "description": "Live Cricket Score JSON API built using Slim Framework.",
    "keywords": [
        "cricket",
        "score",
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "https://github.com/sanwebinfo/cricket-score",
    "license": "MIT",
    "authors": [
        {
            "name": "sanweb",
            "email": "hello@mskian.com",
            "homepage": "https://sanweb.info/"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "7.8.1",
        "monolog/monolog": "2.9.1",
        "php-di/php-di": "6.4.0",
        "slim/psr7": "1.6.1",
        "slim/slim": "4.13.0",
        "symfony/css-selector": "5.4.19",
        "symfony/dom-crawler": "5.4.19",
        "tuupola/cors-middleware": "^1.4"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.2.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5.26",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:6005 -t public"
    }
}
